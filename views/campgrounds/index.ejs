<%layout('layouts/boilerplate')%>
<div id="cluster-map"></div>
<h1 class="mb-3">All campgrounds!</h1>

<% for(let i = campgrounds.length-1; i >= 0; i--){ %>
  <div class="card mb-3">
    <div class="row">
      <div class="col-md-4">
        <% if(campgrounds[i].images.length){%>
        <img class="img-fluid" src="<%=campgrounds[i].images[0].url%>" alt="">
        <% } else{ %>
          <img class="img-fluid" src="https://res.cloudinary.com/dniu6qfly/image/upload/v1680139134/CampFire/vjoqcqmclr2t968yg2uo.jpg" alt="">
          <% } %>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%=campgrounds[i].title%></h5>
          <p class="card-text"><%=campgrounds[i].description.substring(0,177)%>...</p>
          <p class="card-text">
            <small class="text-muted text-primary-emphasis"><%=campgrounds[i].location%></small>
          </p>
          <a class="btn btn-dark" href="/campgrounds/<%=campgrounds[i]._id%>">View Details</a>
        </div>
      </div>
    </div>
  </div>
  <% } %>


<script>
  const mapToken = '<%-process.env.MAPBOX_TOKEN%>'
  const campgrounds = {features:<%-JSON.stringify(campgrounds)%>}
</script>

<script src="/js/clusterMap.js"></script>
