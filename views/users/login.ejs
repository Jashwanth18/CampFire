<%layout('layouts/boilerplate')%>


<div class="container d-flex justify-content-center align-items-center mb-3">
  <div class="row">
    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
      <div class="card shadow">
        <img src="https://images.unsplash.com/photo-1515444744559-7be63e1600de?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80" alt="">
        <div class="card-body">
          <h4 class="card-title text-center">Login</h4>
          <form action="/login" method="POST" class="validated-form" novalidate>
            <div class="mb-3">
              <label class="form-label" for="username">Username</label>
              <input class="form-control" type="text" id="username" name="username" autofocus required>
              <div class="valid-feedback">
                Looks great!
              </div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="password">Password</label>
              <input class="form-control" type="password" id="password" name="password" required>
              <div class="valid-feedback">
                Looks great!
              </div>
            </div>
            <button class="btn btn-primary col-12">Login</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
